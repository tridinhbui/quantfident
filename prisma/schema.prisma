// Prisma schema for QuantFident blog system
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model (linked with Firebase Auth)
model User {
  id              String   @id
  firebaseUid     String   @unique // Firebase Auth UID
  email           String   @unique
  emailVerified   Boolean  @default(false)
  displayName     String?
  photoURL        String?
  role            Role     @default(USER)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  lastLoginAt     DateTime?
  totalLogins     Int      @default(0)

  // Relations
  posts           BlogPost[] @relation("AuthorPosts")

  @@map("users")
}

// Blog post model
model BlogPost {
  id            String     @id @default(cuid())
  title         String
  slug          String     @unique
  content       String     // HTML content from rich text editor
  excerpt       String?
  status        PostStatus @default(DRAFT)
  category      String
  tags          String[]   // Array of tags
  featuredImage String?

  // Metadata
  readingTime   Int        @default(0) // in minutes
  views         Int        @default(0)
  likes         Int        @default(0)

  // Timestamps
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  publishedAt   DateTime?

  // Author relationship
  authorId      String
  author        User       @relation("AuthorPosts", fields: [authorId], references: [id], onDelete: Cascade)

  // Comments relationship (future feature)
  comments      Comment[]

  @@map("blog_posts")
}

// Comments on blog posts (future feature)
model Comment {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  authorName String
  authorEmail String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Post relationship
  postId    String
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("comments")
}

// Enums
enum Role {
  USER
  ADMIN
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}